				<span aria-hidden="True" style="color:#721C24">&times;</span>
			</button>
			<div class="row">
		  		<p style="font-size:18px" class="mb-0 font-weight-light"><b class="mr-1">@title</b>@body</p>
			</div>
		</div>
</div>
@code {
    [Parameter]
    public string title { get; set; }
    [Parameter]
    public string body { get; set; }


}
